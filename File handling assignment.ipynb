   "source": [
    "#Create a program that reads a text file and counts the number of lines in it.\n",
    "with open('hello.txt','r')as f:\n",
    "    print(f.read())\n",
    "    def line():\n",
    "        lines = f.split('\\n')\n",
    "        return len([line for line in lines if line.strip()])"
   ]
